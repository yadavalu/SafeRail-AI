{
    "manifest_version": 3,
    "name": "SafeRail AI",
    "version": "1.0",
    "description": "Safeguards your online experience with AI-driven moderation of email content.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://outlook.office.com/*", "https://outlook.live.com/*"],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Check Email Tone"
    },
    "content_scripts": [
        {
            "matches": ["https://outlook.office.com/*", "https://outlook.live.com/*"],
            "_replace": "https://www.youtube.com/*",
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [".env"],
            "matches": ["<all_urls>"]
        }
    ]
}